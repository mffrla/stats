@{
    ViewBag.Title = "Manage";
}

<div class="container-fluid" ng-controller="manageController as manageVm">
    <div class="row">
        <div>
            <button class="btn btn-primary" type="button" ng-click="manageVm.add()">Add</button>
        </div>
        <div class="col-md-12">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Type
                        </th>
                        <th>
                            Species
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Side
                        </th>
                        <th>
                            Physical Atk
                        </th>
                        <th>
                            Energy Atk
                        </th>
                        <th>
                            Physical Def
                        </th>
                        <th>
                            Energy Def
                        </th>
                        <th>
                            HP
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in manageVm.items">
                        <td>
                            {{item.name}}
                        </td>
                        <td>
                            {{item.type}}
                        </td>
                        <td>
                            {{item.species}}
                        </td>
                        <td>
                            {{item.gender}}
                        </td>
                        <td>
                            {{item.side}}
                        </td>
                        <td>
                            {{item.physicalAtk}}
                        </td>
                        <td>
                            {{item.energyAtk}}
                        </td>
                        <td>
                            {{item.physicalDef}}
                        </td>
                        <td>
                            {{item.energyDef}}
                        </td>
                        <td>
                            {{item.hp}}
                        </td>
                        <td>
                            <a href="#">View</a>
                        </td>
                        <td>
                            <a href="#">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/manage")
}